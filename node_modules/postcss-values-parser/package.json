{
  "name": "postcss-values-parser",
  "version": "3.1.1",
  "description": "A CSS property value parser for use with PostCSS",
  "license": "MPL-2.0",
  "repository": "shellscape/postcss-values-parser",
  "author": {
    "name": "Andrew Powell (shellscape)",
    "email": "andrew@shellscape.org",
    "url": "http://shellscape.org"
  },
  "homepage": "https://github.com/shellscape/postcss-values-parser",
  "bugs": "https://github.com/shellscape/postcss-values-parser/issues",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=6.14.4"
  },
  "scripts": {
    "ci:coverage": "nyc npm run test && nyc report --reporter=text-lcov > coverage.lcov",
    "ci:lint": "npm run lint && npm run security",
    "ci:lint:commits": "commitlint --from=${CIRCLE_BRANCH} --to=${CIRCLE_SHA1}",
    "ci:test": "npm run test",
    "commitlint": "commitlint",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lint": "eslint lib test --fix --cache",
    "lint-staged": "lint-staged",
    "security": "npm audit",
    "test": "ava"
  },
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "color-name": "^1.1.4",
    "is-number": "^7.0.0",
    "is-url-superb": "^3.0.0",
    "postcss": "^7.0.5",
    "url-regex": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "ava": "^2.2.0",
    "chalk": "^2.4.2",
    "eslint-config-shellscape": "^2.0.2",
    "globby": "^10.0.1",
    "lint-staged": "^9.2.0",
    "nyc": "^14.1.0",
    "perfy": "^1.1.5",
    "postcss-value-parser": "^4.0.0",
    "postcss-values-parser": "^3.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.15.2",
    "standard-version": "^6.0.1",
    "strip-ansi": "^5.0.0",
    "text-table": "^0.2.0"
  },
  "keywords": [
    "css",
    "less",
    "ast",
    "postcss",
    "value",
    "values",
    "parser",
    "parsing",
    "properties"
  ],
  "ava": {
    "files": [
      "!**/fixtures/**",
      "!**/helpers/**"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "lib/*.js"
    ],
    "exclude": [
      "test/"
    ]
  },
  "pre-commit": "lint-staged"
}
